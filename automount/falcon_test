import falcon


class Test(object):

    @staticmethod
    def on_get(req, resp):
        resp.status = falcon.HTTP_200  # This is the default status
        resp.body = ('\nTwo things awe me most, the starry sky '
                     'above me and the moral law within me.\n'
                     '\n'
                     '    ~ Immanuel Kant\n\n')


class Hello(object):
    @staticmethod
    def on_get(req, resp):
        resp.body = "hello teddy"

app = falcon.API()
app.add_route('/', Hello())
app.add_route('/things', Test())
